//create function using function keyword that take string as an argument & return the number of vowels in the string:

function countVowels(str){
    let count=0;
    for(const char of str){
        if(char==="a" || char==="e" || char==="i" || char=="o" || char==="u"){
            count ++;
        }
    }
   console.log(count); 
}   

//for counting vowel in string save code and go in index.html page and write click on inspect then go in cosle and type countVowels and string you want to read Ex:=>countVowels("Hello");
